<%= form_for @request do |f| %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br></br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br></br>
  <%= f.label :budget %>
  <%= f.text_area :budget%>
  <br></br>
  <%= f.label :request_date %>
  <%= f.datetime_select :request_date, ampm: true, minute_step: 15 %>
  <br></br>
  <%= f.submit 'Submit' %>
<% end %>
